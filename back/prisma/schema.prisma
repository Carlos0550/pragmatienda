generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum PlanType {
  FREE
  STARTER
  PRO
}


model BusinessData {
  id        String   @id @default(cuid())
  name      String
  description String?
  address String?
  phone String?
  email String?
  website String?
  logo String?
  favicon String?
  banner String?
  socialMedia Json?
  tenant Tenant?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

enum UserStatus {
  ACTIVE
  INACTIVE
  PENDING
  DELETED
  BLOCKED
}

model User {
  id        String   @id @default(cuid())
  email     String   
  phone     String?   
  name      String?
  password  String
  role      Int      @default(1)
  avatar    String?
  isVerified Boolean  @default(false)
  status     UserStatus @default(ACTIVE)
  tenantId  String?
  tenant    Tenant? @relation("TenantUsers", fields: [tenantId], references: [id])
  ownedTenants Tenant[] @relation("TenantOwner")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@unique([email, tenantId])
}

model Tenant {
  id           String     @id @default(cuid())
  businessId   String     @unique
  business     BusinessData @relation(fields: [businessId], references: [id])
  ownerId      String
  owner        User       @relation("TenantOwner", fields: [ownerId], references: [id])
  plan         PlanType   @default(FREE)
  planStartsAt DateTime   @default(now())
  planEndsAt   DateTime?
  trialEndsAt  DateTime?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  users        User[]     @relation("TenantUsers")
}
