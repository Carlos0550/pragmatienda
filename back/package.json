{
  "name": "back",
  "version": "1.0.0",
  "description": "Backend base para tienda online",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch --clear-screen=false --watch=src --watch=prisma --watch=.env src/server.ts",
    "dev:ssr:front": "npm run build:client:watch --prefix ../front & npm run build:server:watch --prefix ../front",
    "build": "tsc",
    "build:ssr": "npm run build --prefix ../front && npm run build",
    "start": "node dist/server.js",
    "postinstall": "prisma generate",
    "prisma": "prisma",
    "migrate": "prisma migrate dev",
    "generate": "prisma generate",
    "seed": "prisma db seed",
    "billing:sync-plans": "tsx src/scripts/sync-mp-preapproval-plans.ts",
    "billing:sync-subscriptions": "tsx src/scripts/billing-subscription-sync.ts",
    "superadmin:token": "tsx src/scripts/superadmin-token.ts",
    "studio": "prisma studio",
    "test": "vitest run"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.4",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "compression": "^1.8.1",
    "cors": "^2.8.6",
    "dayjs": "^1.11.19",
    "dotenv": "^16.6.1",
    "express": "^4.22.1",
    "groq-sdk": "^0.37.0",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.3",
    "mercadopago": "^2.12.0",
    "minio": "^7.1.3",
    "multer": "^2.0.2",
    "nodemailer": "^8.0.1",
    "pg": "^8.18.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "redis": "^4.7.1",
    "resend": "^4.8.0",
    "sharp": "^0.34.5",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.19.0",
    "zod": "^3.25.76"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.33",
    "@types/nodemailer": "^6.4.22",
    "@types/pg": "^8.10.9",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/sharp": "^0.31.1",
    "@types/swagger-ui-express": "^4.1.8",
    "prisma": "^7.3.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
